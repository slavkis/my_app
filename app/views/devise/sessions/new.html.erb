
<h2>Hey! Just log in!</h2>

<div class="form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="login-form">
      <div class="field">
        <%= f.label :email, "email:" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'ur email' %>
      </div>

      <div class="field">
        <%= f.label :password, "password:" %><br />
        <%= f.password_field :password, autocomplete: "current-password", placeholder: 'ur password' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-outline-secondary" %>
      </div>
  <% end %>
  <%= render "devise/shared/links" %>
  </div>
</div>