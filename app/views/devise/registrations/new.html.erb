<h2>Sign up, bro!</h2>
<div class="form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="sign-up-form">
      <div class="field">
        <p>
          <%= f.label :email, "email:" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "ur email"%>
        </p>  
      </div>
      <div class="field">
        <p>
          <%= f.label :password, "password:" %><br>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "ur password" %>
        </p>
      </div>

      <div class="field">
        <p>
          <%= f.label :password_confirmation , "password confirmation:"%><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "pass confirm" %>
        </p>  
      </div>

      <div class="actions">
        <p>
          <%= f.submit "Sign up", class: "btn btn-outline-secondary"%>
        </p>     
      </div>
    <%= render "devise/shared/links" %>
    </div> 
  <%end%> 
</div> 